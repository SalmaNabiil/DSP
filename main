    print (Result)


def normalize1():
    global Signal1
    V1 = []
    # v2=[2,5,2,7,2,4,9,2]
    # a = np.array([2,5,2,7,2,-4,9,2])
    # maxi = max(Signal1)
    # mini=min(Signal1)
    # mini = -1 * max(Signal1)

    # print(maxi)
    # print(mini)
    # Y=np.array(Yval)
    what = var_chk2.get()
    for j in Signal1:
        if what == 1:
            V1.append((j[0], (j[1] - mini) / (maxi - mini)))  # V1 = (j[1] - Min) / (Max - Min)
            # print(V1)
            Xind1 = [i[0] for i in V1]
            Yval2 = [i[1] for i in V1]
            # print Yval2
            plt.plot(Xind1, Yval2, 'bo', color='red', markersize=7)
            # plt.show()
        else:
            V1.append((j[0], (
            -1 + (((j[1] - mini) / (maxi - mini)) * 2))))  # V1 = (j[1] - Min) / (Max - Min)  #######V1=1+2*V1
            # print(V1)
            # V1 = (((j[1] - Min) / (Max - Min))*2)+1
            # V1=1+(2*V1)
            # [3  7  3  9  3  5 11  3]
            Xind2 = [i[0] for i in V1]
            Yval3 = [i[1] for i in V1]
            # print Yval3
            plt.plot(Xind2, Yval3, 'bo', color='purple', markersize=7)
    print(V1)
    plt.show()
    return V1  # Mul2()


def Remove_DC_Component():
    Rem = []
    y = [i[1] for i in Signal1]
    x = [i[0] for i in Signal1]
    sum1 = sum(y)

    # Count = range(len(y))
    Count = len(y)
    # print Count
    # c1=np.asarray(Count)
    mean = float(sum1 / Count)
    mean1 = np.asarray(mean)
    Rem = y - mean1
    # print sum1
    # print mean
    plt.plot(x, Rem, 'bo', color='red', markersize=7)
    plt.show()
    print Rem


