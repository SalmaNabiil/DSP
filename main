    Signal1_Index.sort()
    Signal2_Index.sort()
    print(Signal1_Index)
    print(Signal2_Index)

    ActualAdd()
    plt.xlabel('Time -- sample number')
    plt.ylabel('voltage')
    plt.show()
    return FinalRes


